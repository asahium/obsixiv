    "model-context-protocol",
    "arxiv",
    "papers",
    "blog-generation"
  ],
  "author": "asahium",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "node-fetch": "^3.3.2",
    "fast-xml-parser": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "typescript": "^5.3.3",
    "esbuild": "^0.20.1"
  }
}

