{
  "name": "obsixiv-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for ObsiXiv - search papers and generate blog posts",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && node esbuild.config.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js"
  },
  "keywords": [
